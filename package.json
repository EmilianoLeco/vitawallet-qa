{
  "name": "qa-automation-vitawallet",
  "version": "1.0.0",
  "description": "QA Automation suite for Vita Wallet - API and Mobile testing",
  "scripts": {
    "test:api": "newman run api-tests/postman/Petstore_Collection.json -r cli,htmlextra --reporter-htmlextra-export reports/newman/api_report.html --reporter-htmlextra-darkTheme",
    "test:api:verbose": "newman run api-tests/postman/Petstore_Collection.json -r cli,htmlextra,json --reporter-htmlextra-export reports/newman/api_report.html --reporter-htmlextra-darkTheme --reporter-json-export reports/newman/api_report.json --verbose",
    "test:api:ci": "newman run api-tests/postman/Petstore_Collection.json -r cli,json --reporter-json-export reports/newman/api_report_ci.json --bail",
    "appium": "appium",
    "install:appium": "npm install -g appium && appium driver install uiautomator2",
    "check:devices": "adb devices",
    "postinstall": "echo ✅ Dependencias instaladas. Ejecuta npm run test:api para correr API tests"
  },
  "keywords": [
    "qa",
    "automation",
    "testing",
    "appium",
    "newman",
    "postman",
    "api",
    "mobile"
  ],
  "author": "Emiliano Lecoña",
  "license": "ISC",
  "devDependencies": {
    "appium": "^2.11.0",
    "appium-uiautomator2-driver": "^2.45.1",
    "newman": "^6.1.1",
    "newman-reporter-htmlextra": "^1.23.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EmilianoLeco/vitawallet-qa"
  }
}
